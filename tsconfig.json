{
  "compilerOptions": {
    "target": "es5",                     // Specify the target ECMAScript version
    "module": "commonjs",                // Specify module code generation
    "strict": true,                      // Enable all strict type-checking options
    "esModuleInterop": true,              // Enable/disable emit helpers (like __extends)
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure that casing is consistent in file names
    "moduleResolution": "node",          // Specify module resolution strategy (Node.js-style)
    "declaration": true,                 // Generate corresponding .d.ts file
    "outDir": "./dist",                  // Redirect output structure to the directory
    "rootDir": "./src",                  // Specify the root directory of input files
    "baseUrl": "./",                     // Base directory to resolve non-absolute module names
    "paths": {
      "*": ["node_modules/*", "src/types/*"]  // Mapping paths to module directories
    }
  },
  "include": [
    "src/**/*.ts"                       // Specify files to include in compilation
  ],
  "exclude": [
    "node_modules"                      // Specify files to exclude from compilation
  ],
  "extends": "expo/tsconfig.base"

}

